/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run gongyh/nf-core-scgs -profile test
 */

params {
  // Limit resources so that this can run on Travis and CircleCI
  max_cpus = 16
  max_memory = 48.GB
  max_time = 1.h
  // Input data
  singleEnd = false
  readPaths = [
    ['E1', ["$baseDir/test-datasets/E1.1.fastq.gz", "$baseDir/test-datasets/E1.2.fastq.gz"]],
    ['E2', ["$baseDir/test-datasets/E2.1.fastq.gz", "$baseDir/test-datasets/E2.2.fastq.gz"]],
    ['E3', ["$baseDir/test-datasets/E3.1.fastq.gz", "$baseDir/test-datasets/E3.2.fastq.gz"]]
  ]
  fasta = "$baseDir/test-datasets/ATCC25922.fa"
  gff = "$baseDir/test-datasets/ATCC25922.gff"
  genus = "Escherichia"
  saveTrimmed = false
  saveAlignedIntermediates = false
  blockSize = 2
}

executor {
  $local {
    cpus = 16
    queueSize = 8
    memory = 48.GB
  }
}

process {

  cpus = 2
  memory = 2.GB
  time = 1.h

  maxRetries = 0
  maxErrors = '-1'

  // Environment modules and resource requirements
  withName: trim_galore {
    cpus = 16
    memory = 16.GB
    time = 1.h
  }
  withName: kraken {
    cpus = 16
    memory = 16.GB
    time = 1.h
  }
  withName: bowtie2 {
    cpus = 16
    memory = 16.GB
    time = 1.h
  }
  withName: minimap2 {
    cpus = 16
    memory = 16.GB
    time = 1.h
  }
  withName: samtools {
    cpus = 4
    memory = 8.GB
    time = 1.h
  }
  withName: IndelRealign {
    cpus = 8
    memory = 8.GB
    time = 1.h
  }
  withName: monovar {
    cpus = 16
    memory = 16.GB
    time = 1.h
  }
  withName: aneufinder {
    cpus = 2
    memory = 16.GB
    time = 1.h
  }
  withName: normalize {
    cpus = 4
    memory = 16.GB
    time = 1.h
  }
  withName: spades {
    maxForks = 1
    cpus = 16
    memory = 32.GB
    time = 1.h
  }
  withName: canu {
    maxForks = 1
    cpus = 16
    memory = 32.GB
    time = 1.h
  }
  withName: blast_nt {
    cpus = 16
    memory = 32.GB
    time = 1.h
  }
  withName: diamond_uniprot {
    cpus = 16
    memory = 42.GB
    time = 1.h
  }
  withName: checkm {
    cpus = 8
    memory = 16.GB
    time = 1.h
  }
  withName: quast_ref {
    cpus = 8
    memory = 16.GB
    time = 1.h
  }
  withName: prokka {
    cpus = 16
    memory = 16.GB
    time = 1.h
  }
  withName: eggnog {
    cpus = 16
    memory = 16.GB
    time = 1.h
  }
  withName: resfinder {
    cpus = 8
    memory = 16.GB
    time = 1.h
  }
  withName: pointfinder {
    cpus = 8
    memory = 16.GB
    time = 1.h
  }
  withName: get_software_versions {
    memory = 1.GB
    errorStrategy = 'ignore'
  }
  withName: multiqc_ref {
    memory = 6.GB
  }
}
