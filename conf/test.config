/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run gongyh/nf-core-scgs -profile test
 */

params {
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
  // TODO nf-core: Give any required params for the test so that command line flags are not needed
  singleEnd = false
  readPaths = [
    ['E1', ["$baseDir/test-datasets/E1.1.fastq.gz", "$baseDir/test-datasets/E1.2.fastq.gz"]],
    ['E2', ["$baseDir/test-datasets/E2.1.fastq.gz", "$baseDir/test-datasets/E2.2.fastq.gz"]],
    ['E3', ["$baseDir/test-datasets/E3.1.fastq.gz", "$baseDir/test-datasets/E3.2.fastq.gz"]]
  ]
  fasta = "$baseDir/test-datasets/ATCC25922.fasta"
  gff = "$baseDir/test-datasets/ATCC25922.gff"
  genus = "Escherichia"
  saveTrimmed = true
  saveAlignedIntermediates = true
}

process {

  cpus = { check_max( 1 * task.attempt, 'cpus' ) }
  memory = { check_max( 3.GB * task.attempt, 'memory' ) }
  time = { check_max( 2.h * task.attempt, 'time' ) }

  errorStrategy = { task.exitStatus in [143,137] ? 'retry' : 'terminate' }
  maxRetries = 1
  maxErrors = '-1'

  // Environment modules and resource requirements
  withLabel: trim_galore {
    cpus = { check_max( 2 * task.attempt, 'cpus' ) }
    memory = { check_max( 3.GB * task.attempt, 'memory' ) }
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withLabel: bowtie2{
    cpus = { check_max( 2 * task.attempt, 'cpus' ) }
    memory = { check_max( 6.GB * task.attempt, 'memory' ) }
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withLabel: samtools {
    cpus = { check_max( 1 * task.attempt, 'cpus' ) }
    memory = { check_max( 3.GB * task.attempt, 'memory' ) }
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withLabel: monovar {
    cpus = { check_max( 2 * task.attempt, 'cpus' ) }
    memory = { check_max( 6.GB * task.attempt, 'memory' ) }
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withLabel: aneufinder {
    cpus = { check_max( 1 * task.attempt, 'cpus' ) }
    memory = { check_max( 6.GB * task.attempt, 'memory' ) }
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withLabel: spades {
    cpus = { check_max( 2 * task.attempt, 'cpus' ) }
    memory = { check_max( 6.GB * task.attempt, 'memory' ) }
    time = { check_max( 12.h * task.attempt, 'time' ) }
  }
  withLabel: quast {
    cpus = { check_max( 2 * task.attempt, 'cpus' ) }
    memory = { check_max( 3.GB * task.attempt, 'memory' ) }
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withLabel: get_software_versions {
    memory = { check_max( 2.GB * task.attempt, 'memory' ) }
    errorStrategy = 'ignore'
  }
  withLabel: multiqc {
    memory = { check_max( 2.GB * task.attempt, 'memory' ) }
  }
}
